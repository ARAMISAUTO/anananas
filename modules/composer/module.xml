<?xml version="1.0" encoding="UTF-8"?>
<project name="composer">
	<!-- Mandatory targets -->
	<target name="init" />
	<target name="install" depends="module.composer.install" />
	<target name="build" />
	<target name="package" />
	<target name="upload" />
	<target name="configure" />

	<!-- toolkit phase : build -->
	<target name="module.composer.install" description="Installs dependencies managed by Composer">
		<exec dir="${application.dir.base}" executable="${composer.executable}" failonerror="true" resolveexecutable="true">
			<arg line="install ${composer.install.options}" />
		</exec>
	</target>
</project>
