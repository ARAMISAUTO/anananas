<?xml version="1.0" encoding="UTF-8"?>
<project name="tar">
    <!-- Stages hooks -->
    <target name="init">
        <dirname file="${ant.file.toolkit}" property="toolkit.module.toolkitdir" />
        <dirname file="${toolkit.module.toolkitdir}/tar" property="toolkit.module.basedir" />
        <initConfiguration
            projectDir="${application.dir.base}"
            configurationDir="${toolkit.dir.configuration}"
            moduleDir="${toolkit.module.basedir}/.."
            moduleName="tar" />
    </target>
	<target name="install" />
	<target name="configure" />
	<target name="build" />
	<target name="package" depends="tar.archive" />
	<target name="upload" />

    <target name="tar.archive" description="Packages application sources into a tar archive">
        <tar 
            basedir="${application.dir.base}${tar.dir.base}" 
            compression="${tar.compression}"
            destfile="${application.dir.base}/dist/${tar.package.filename}"
            includesfile="${application.dir.base}/${toolkit.dir.configuration}/modules/tar/includes"
            excludesfile="${application.dir.base}/${toolkit.dir.configuration}/modules/tar/excludes"
            longfile="posix" />
    </target>
</project>
