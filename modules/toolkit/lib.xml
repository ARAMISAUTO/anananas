<?xml version="1.0" encoding="UTF-8"?>
<project name="toolkit.lib" default="help">
	<!-- Generates list of paths to module.xml files in toolkit.modules.paths property -->
	<scriptdef name="expandModulesPaths" language="javascript" src="${toolkit.dir.base}/modules/toolkit/lib/js/expandModulesPaths.js">
		<attribute name="native" />
        <attribute name="external" />
	</scriptdef>

	<!-- Iterates of project files and calls given target -->
    <macrodef name="iterate">
        <attribute name="target" />
        <attribute name="basedir" />
        <attribute name="paths" />
        <sequential>
            <subant target="@{target}" inheritall="true">
                <fileset dir="@{basedir}" includes="@{paths}" />
            </subant>
        </sequential>
    </macrodef>

    <macrodef name="initConfiguration">
        <attribute name="projectDir" />
        <attribute name="configurationDir" />
        <attribute name="moduleDir" />
        <attribute name="moduleName" />
        <sequential>
            <mkdir dir="@{projectDir}/@{configurationDir}/modules/@{moduleName}" />
            <copy todir="@{projectDir}/@{configurationDir}/modules/@{moduleName}">
                <fileset dir="@{moduleDir}/@{moduleName}/etc" includes="*" erroronmissingdir="false" />
            </copy>
        </sequential>
    </macrodef>
</project>
