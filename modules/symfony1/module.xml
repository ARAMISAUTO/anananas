<?xml version="1.0" encoding="UTF-8"?>
<project name="symfony1">
	<!-- toolkit phase : build -->
	<target name="symfony1.orm" description="Generates ORM classes needed for the project to work properly">
		<antcall target="symfony1.12.orm" />
		<antcall target="symfony1.14.orm" />
	</target>

	<target name="symfony1.12.orm" if="${symfony1.version12}">
		<property file="${toolkit.basedir}/modules/php/build.properties" />
		<exec executable="${php.executable}" failonerror="true">
			<arg line="${symfony1.executable} doctrine:build-model" />
		</exec>
	</target>

	<target name="symfony1.14.orm" if="${symfony1.version14}">
		<property file="${toolkit.basedir}/modules/php/build.properties" />
		<exec executable="${php.executable}" failonerror="true">
			<arg line="${symfony1.executable} doctrine:build --all-classes" />
		</exec>
	</target>
</project>
