<?xml version="1.0" encoding="UTF-8"?>
<project name="toolkit-sdk">
	<!-- Mandatory targets -->
	<target name="init">
        <dirname file="${ant.file.toolkit-sdk}" property="toolkit.module.basedir" />
        <initConfiguration
            projectDir="${application.dir.base}"
            configurationDir="${toolkit.dir.configuration}"
            moduleDir="${toolkit.module.basedir}"
            moduleName="toolkit-sdk" />
	</target>
	<target name="install" />
	<target name="build" />
	<target name="package" />
	<target name="upload" />
	<target name="configure" />

	<target name="module.toolkit-sdk.module.generate" description="Generates a stub module">
		<!-- Sanity checks -->
		<fail unless="module.name" />

		<!-- Create stub module -->
		<copy todir="${toolkit.dir.base}/modules/${module.name}" overwrite="false" verbose="true">
			<fileset dir="${toolkit.dir.base}/templates/module" />
		</copy>
		<replace dir="${toolkit.dir.base}/modules/${module.name}/" includes="*" token="@module.name@" value="${module.name}" summary="true" />
	</target>
</project>
