<?xml version="1.0" encoding="UTF-8"?>
<project name="bower">
	<!-- Mandatory targets -->
	<target name="bootstrap" />
	<target name="update" depends="bower-update" />
	<target name="configure" />
	<target name="build" depends="bower-install" />
	<target name="review" />
	<target name="migrate" />
	<target name="sync" />

	<!-- toolkit phase : build -->
	<target name="bower-install" description="Installs dependencies managed by Bower">
		<exec dir="${project.dirs.base}" executable="${bower.executable}" failOnError="true" resolveexecutable="true">
			<arg line="-f install" />
		</exec>
	</target>

	<!-- toolkit phase : update -->
	<target name="bower-update" description="Updates dependencies managed by Bower">
		<exec dir="${project.dirs.base}" executable="${bower.executable}" failOnError="true" resolveexecutable="true">
			<arg line="update" />
		</exec>
	</target>
</project>
