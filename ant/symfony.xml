<?xml version="1.0" encoding="UTF-8"?>
<project name="symfony">

	<target name="symfony.orm" description="Generates ORM classes needed for the project to work properly" if="${symfony.enabled}">
		<antcall target="symfony.12.orm" />
		<antcall target="symfony.14.orm" />
	</target>

	<target name="symfony.12.orm" if="${symfony.version12}">
		<exec executable="src/symfony">
			<arg line="doctrine:build-model" />
		</exec>
	</target>

	<target name="symfony.14.orm" if="${symfony.version14}">
		<exec executable="src/symfony">
			<arg line="doctrine:build --all-classes" />
		</exec>
	</target>
</project>